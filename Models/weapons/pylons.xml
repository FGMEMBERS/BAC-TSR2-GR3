<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>pylons.ac</path>
  <animation>
    <object-name>pylon1.L</object-name>
    <object-name>pylon2.L</object-name>
    <object-name>pylon.C</object-name>
    <object-name>pylon2.R</object-name>
    <object-name>pylon1.R</object-name>
  </animation>

  <!-- pylon options -->
  <!--station left 1 -->
  <animation>
    <type>select</type>
    <object-name>pylon1.L</object-name>      
    <condition>
      <not-equals>
        <property>sim/weight[0]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pylon2.L</object-name>      
    <condition>
      <not-equals>
        <property>sim/weight[1]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>


 <!--Bomb Bay -->
  <animation>
    <type>select</type>
    <object-name>pylon.C</object-name>      
    <condition>
      <not-equals>
        <property>sim/weight[2]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

   
  <animation>
    <type>select</type>
    <object-name>pylon2.R</object-name>      
    <condition>
      <not-equals>
        <property>sim/weight[3]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>pylon1.R</object-name>      
    <condition>
      <not-equals>
        <property>sim/weight[4]/selected</property>
        <value>none</value>
      </not-equals>
    </condition>
  </animation>

</PropertyList>
